<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/banner_bg"
    android:orientation="vertical"
    tools:context="com.huihui.gameclient.activity.CommentActivity">


    <com.huihui.gameclient.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.huihui.gameclient.view.TitleBar>


    <com.huihui.gameclient.view.XListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.huihui.gameclient.view.XListView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"

            android:background="@mipmap/banner_bg"
            android:hint="@string/str_com_ex" />


        <TextView
            android:id="@+id/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"


            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_commemt"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_big" />

    </LinearLayout>


</LinearLayout>
