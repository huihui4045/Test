<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/banner_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.huihui.gameclient.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.huihui.gameclient.view.TitleBar>

    <FrameLayout
        android:id="@+id/lay_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/ly_chapter"
            style="@style/style_ly_bottom">

            <ImageView
                style="@style/style_image_btn"
                android:src="@mipmap/chapter_checked" />

            <TextView
                style="@style/style_text_btn"
                android:text="@string/str_chapter" />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/ly_forum"
            style="@style/style_ly_bottom">

            <ImageView
                style="@style/style_image_btn"
                android:src="@mipmap/forum_checked" />


            <TextView
                style="@style/style_text_btn"
                android:text="@string/str_forum" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_game"
            style="@style/style_ly_bottom">

            <ImageView
                style="@style/style_image_btn"

                android:src="@mipmap/game_checked" />


            <TextView
                style="@style/style_text_btn"
                android:text="@string/str_game" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
