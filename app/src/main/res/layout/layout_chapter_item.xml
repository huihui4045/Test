<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:scaleType="fitXY"
        android:src="@mipmap/product_default" />


    <TextView
        android:id="@+id/text_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"

        android:text="1001"
        android:textSize="@dimen/text_size_center" />

    <TextView
        android:id="@+id/text_shorttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/text_feedback"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="文章短标题"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/text_pubdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_shorttitle"

        android:layout_alignStart="@+id/text_shorttitle"
        android:layout_below="@+id/text_feedback"
        android:text="2015-9-11 4:20"
        android:textSize="@dimen/text_size_center" />


</RelativeLayout>