<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="style_radio_button">


        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="android:background">@color/select_radio_btn</item>
        <item name="android:button">@null</item>


    </style>


    <style name="style_image_btn">
        <item name="android:layout_gravity">top|center</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_text_btn">

        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">2.5dp</item>

    </style>

    <!--  android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@color/select_radio_btn"
      android:orientation="vertical"-->

    <style name="style_ly_bottom">

        <item name="android:onClick">OnClick</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/select_radio_btn</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>

    </style>

</resources>
